[
  {
    "id": "downstream",
    "execute-command": "/downstream/hook.sh",
    "command-working-directory": "/downstream",
    "pass-environment-to-command": [
      {
        "source": "payload",
        "name": "repo",
        "envname": "REPO"
      },
      {
        "source": "payload",
        "name": "branch",
        "envname": "BRANCH"
      },
      {
        "source": "payload",
        "name": "build_status",
        "envname": "BUILD_STATUS"
      },
      {
        "source": "payload",
        "name": "build_number",
        "envname": "BUILD_NUMBER"
      },
      {
        "source": "payload",
        "name": "build_started",
        "envname": "BUILD_STARTED"
      },
      {
        "source": "payload",
        "name": "build_finished",
        "envname": "BUILD_FINISHED"
      },
      {
        "source": "payload",
        "name": "build_link",
        "envname": "BUILD_LINK"
      },
      {
        "source": "payload",
        "name": "commit_message",
        "envname": "COMMIT_MESSAGE"
      },
      {
        "source": "payload",
        "name": "commit_link",
        "envname": "COMMIT_LINK"
      },
      {
        "source": "payload",
        "name": "commit",
        "envname": "COMMIT"
      }
    ],
    "trigger-rule-mismatch-http-response-code": 401,
    "trigger-rule": {
      "match": {
        "type": "value",
        "value": "{{ getenv "WEBHOOK_TOKEN" | js }}",
        "parameter":
        {
          "source": "header",
          "name": "Authorization"
        }
      }
    }
  }
]
